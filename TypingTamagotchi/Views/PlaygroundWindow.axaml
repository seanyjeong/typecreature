        Width="{Binding PlaygroundWidth}"
        Height="{Binding PlaygroundHeight}"
        MinWidth="300"
        MinHeight="120"
        CanResize="True"
        SystemDecorations="None"
        Topmost="True"
        Background="Transparent"
        WindowStartupLocation="Manual">

    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="CornerRadius" Value="12"/>
        </Style>
    </Window.Styles>

    <Border CornerRadius="12"
            ClipToBounds="True"
            PointerPressed="OnPointerPressed">
        <Grid>
            <!-- ë°°ê²½ ì´ë¯¸ì§€ -->
            <Image Source="/Assets/Playground/background.png"
                   Stretch="Fill"/>

            <!-- í¬ë¦¬ì²˜ë“¤ -->
            <ItemsControl ItemsSource="{Binding Creatures}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Panel Width="48" Height="56">
                            <!-- ê·¸ë¦¼ìž -->
                            <Ellipse Width="40" Height="12"
                                     Fill="#40000000"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Bottom"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform ScaleX="{Binding ShadowScale}" ScaleY="{Binding ShadowScale}"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <!-- í¬ë¦¬ì²˜ ì´ë¯¸ì§€ -->
                            <Image Source="{Binding Creature.SpritePath, Converter={x:Static vm:SpritePathToImageConverter.Instance}}"
                                   Width="48" Height="48"
                                   VerticalAlignment="Top"
                                   RenderTransformOrigin="0.5,1">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="{Binding Direction}" ScaleY="{Binding ScaleY}"/>
                                        <RotateTransform Angle="{Binding Rotation}"/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>

                            <!-- Canvas ìœ„ì¹˜ ì„¤ì • -->
                            <Panel.RenderTransform>
                                <TranslateTransform X="{Binding X}" Y="{Binding Y}"/>
                            </Panel.RenderTransform>
                        </Panel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- ì´íŽ™íŠ¸ë“¤ -->
            <ItemsControl ItemsSource="{Binding Effects}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Image Source="/Assets/Playground/bump_effect.png"
                               Width="64" Height="64"
                               Opacity="{Binding Opacity}">
                            <Image.RenderTransform>
                                <TranslateTransform X="{Binding X}" Y="{Binding Y}"/>
                            </Image.RenderTransform>
                        </Image>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- ë‹«ê¸° ë²„íŠ¼ -->
            <Button Content="âœ•"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,4,4,0"
                    Width="24" Height="24"
                    FontSize="12"
                    Background="#80000000"
                    Foreground="White"
                    CornerRadius="12"
                    Click="OnCloseClick"/>

            <!-- ìƒˆë¡œê³ ì¹¨ ë²„íŠ¼ -->
            <Button Content="ðŸ”„"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,4,32,0"
                    Width="24" Height="24"
                    FontSize="12"
                    Background="#80000000"
                    Foreground="White"
                    CornerRadius="12"
                    Click="OnRefreshClick"
                    ToolTip.Tip="ìƒˆë¡œê³ ì¹¨"/>

            <!-- ë¦¬ì‚¬ì´ì¦ˆ í•¸ë“¤ë“¤ -->
            <!-- ì¢Œí•˜ë‹¨ -->
            <Border Width="16" Height="16"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Cursor="BottomLeftCorner"
                    Background="Transparent"
                    PointerPressed="OnResizePointerPressed"
                    Tag="BottomLeft"/>

            <!-- ìš°í•˜ë‹¨ (ì‚¼ê°í˜• í‘œì‹œ) -->
            <Canvas Width="16" Height="16"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Cursor="BottomRightCorner"
                    PointerPressed="OnResizePointerPressed"
                    Tag="BottomRight">
                <Polygon Points="16,0 16,16 0,16"
                         Fill="#60FFFFFF"
                         Stroke="#80FFFFFF"
                         StrokeThickness="1"/>
            </Canvas>

            <!-- í•˜ë‹¨ ê°€ìž¥ìžë¦¬ -->
            <Border Height="6"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Margin="16,0,16,0"
                    Cursor="SizeNorthSouth"
                    Background="Transparent"
                    PointerPressed="OnResizePointerPressed"
                    Tag="Bottom"/>

            <!-- ì¢Œì¸¡ ê°€ìž¥ìžë¦¬ -->
            <Border Width="6"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Margin="0,28,0,16"
                    Cursor="SizeWestEast"
                    Background="Transparent"
                    PointerPressed="OnResizePointerPressed"
                    Tag="Left"/>

            <!-- ìš°ì¸¡ ê°€ìž¥ìžë¦¬ -->
            <Border Width="6"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch"
                    Margin="0,28,0,16"
                    Cursor="SizeWestEast"
                    Background="Transparent"
                    PointerPressed="OnResizePointerPressed"
                    Tag="Right"/>
        </Grid>
    </Border>
</Window>
