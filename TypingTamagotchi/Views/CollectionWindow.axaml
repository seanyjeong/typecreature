<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TypingTamagotchi.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="TypingTamagotchi.Views.CollectionWindow"
        x:DataType="vm:CollectionViewModel"
        Title="도감"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner">

    <Window.Styles>
        <!-- 작은 버튼들 hover/pressed 스타일 -->
        <Style Selector="Button.small:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#B0BEC5"/>
        </Style>
        <Style Selector="Button.small:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#607D8B"/>
        </Style>
    </Window.Styles>

    <Design.DataContext>
        <vm:CollectionViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- 헤더 -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="20">
            <TextBlock Text="{Binding CollectionStatus}"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- 크리처 그리드 -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Items}" Margin="10,10,10,40">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="100" Height="150"
                                Margin="5"
                                Background="{Binding Creature.Rarity, Converter={x:Static vm:RarityToColorConverter.Instance}}"
                                CornerRadius="8"
                                Opacity="{Binding Opacity}"
                                Padding="5"
                                PointerPressed="OnCreatureClick"
                                Tag="{Binding}"
                                Cursor="Hand">
                            <StackPanel VerticalAlignment="Center" Spacing="2">
                                <!-- 크리처 이미지 -->
                                <Border Width="50" Height="50"
                                        Background="White"
                                        CornerRadius="8"
                                        HorizontalAlignment="Center"
                                        ClipToBounds="True">
                                    <Image Source="{Binding Creature.SpritePath, Converter={x:Static vm:SpritePathToImageConverter.Instance}}"
                                           Width="48" Height="48"
                                           Opacity="{Binding Opacity}"
                                           Stretch="Uniform"/>
                                </Border>

                                <!-- 이름 -->
                                <TextBlock Text="{Binding DisplayName}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>

                                <!-- 희귀도 -->
                                <TextBlock Text="{Binding RarityText}"
                                           FontSize="9"
                                           Foreground="Gray"
                                           HorizontalAlignment="Center"/>

                                <!-- 개수 -->
                                <TextBlock Text="{Binding CountText}"
                                           FontSize="9"
                                           Foreground="DarkGreen"
                                           HorizontalAlignment="Center"/>

                                <!-- 버튼들 -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Spacing="2"
                                            IsVisible="{Binding IsOwned}">
                                    <!-- 진열장 버튼 -->
                                    <Button Classes="small"
                                            Content="진열"
                                            Click="OnToggleDisplayClick"
                                            Tag="{Binding}"
                                            IsEnabled="{Binding CanSendToDisplay}"
                                            FontSize="8"
                                            Padding="4,2"
                                            Background="{Binding IsInDisplay, Converter={x:Static vm:BoolToColorConverter.Instance}}"/>
                                    <!-- 놀이터 버튼 -->
                                    <Button Classes="small"
                                            Content="놀이터"
                                            Click="OnTogglePlaygroundClick"
                                            Tag="{Binding}"
                                            IsEnabled="{Binding CanSendToPlayground}"
                                            FontSize="8"
                                            Padding="4,2"
                                            Background="{Binding IsInPlayground, Converter={x:Static vm:BoolToPlaygroundColorConverter.Instance}}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 하단 -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <Border Width="16" Height="16" Background="#E8F5E9" CornerRadius="3"/>
                    <TextBlock Text="Common" VerticalAlignment="Center" FontSize="11"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <Border Width="16" Height="16" Background="#E3F2FD" CornerRadius="3"/>
                    <TextBlock Text="Rare" VerticalAlignment="Center" FontSize="11"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <Border Width="16" Height="16" Background="#F3E5F5" CornerRadius="3"/>
                    <TextBlock Text="Epic" VerticalAlignment="Center" FontSize="11"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <Border Width="16" Height="16" Background="#FFF8E1" CornerRadius="3"/>
                    <TextBlock Text="Legendary" VerticalAlignment="Center" FontSize="11"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
